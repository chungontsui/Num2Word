@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top: 20px">
    <div class="col-md-1"></div>
    <div class="col-md-10" ng-controller="ctrl">
        <form ng-submit="formSubmit()">
            <div class="form-group">
                <label for="PersonName">Name</label>
                <input type="text" class="form-control" maxlength="50" id="PersonName" placeholder="Please Enter a Name" ng-model="PersonName" required>
            </div>
            <div class="{{NumberInputClass}}">
                <label for="Number">Number</label>
                <input type="number" step="any" class="form-control" id="Number" placeholder="Please Enter a number" ng-model="Number" required>
                <span style="color: #a94442;" ng-show="showError">{{errorMsg}}</span>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit">
        </form>
        <p>
            <h3>{{OutputPersonName}}</h3>
        </p>
        <p>
            <h3>{{NumberInWords}}</h3>
        </p>
        <p>
            <h3 style="color: #a94442;">{{ErrorMessage}}</h3>
        </p>
    </div>
    <div class="col-md-1"></div>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <p></p>
    </div>
    <div class="col-md-1"></div>
</div>
